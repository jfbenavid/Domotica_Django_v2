	.clock
		background-color #252525
		float left
		height 200px
		overflow hidden
		position relative
		width 200px

		.front.left
				left 0
				z-index 10
		
		.rotate
			height 200px
			left 0
			position absolute
			top 0
			width 200px

		.bg, .front
			background-color #252525
			height 200px
			position absolute
			top 0
			width 100px
		
		.display
			color #F5F5F5
			font-family "Lucida Sans Unicode", "Lucida Grande", sans-serif
			font-size 60px
			left 0
			position absolute
			text-align center
			text-shadow 4px 4px 5px #333333
			top 65px
			width 200px
			z-index 20
			
		.bg
			.left
				left 0
			.right
				left 100px	
