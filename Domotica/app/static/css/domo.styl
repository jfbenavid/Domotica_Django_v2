azul = #22BCE0

body
	//background #302B23
	color color_fondo
	font-family Arial, Helvetica, sans-serif
	font-size 16px
	
footer
	background color_fondo
	color rgba(white,0.5)
	padding 1em 0
	text-align center
	width 100%
		
	h3
		font-size 14px
		font-weight normal
		
		strong
			display block
	
		.design, .electronica
			display block

			&:before
			&:after
				content " - "

header
	background color_fondo
	color rgba(white,0.5)
	padding 0.5em
	position relative
	
	.logo
		border-right 1px solid white
		bottom 5px
		float left
		position absolute
		top 5px
		width 60px

		img
			width 52px
			
	.logoU
		border-left 1px solid white
		bottom 5px
		display inline-block
		float right
		position absolute
		right 5px
		top 5px
		width 70px

		img
			margin-left 10px
			width 52px
			
	.titulo
		margin 0 80px 0 70px

		.title
			font-size 18px
			font-weight normal
			height 3.5em
			margin 0
			text-align center
			line-height 60px

.sec
	background white
	
	.selPuerto

		.cajaselect
			background none repeat scroll 0 0 #4cbeff
			border-radius 5px 5px 0 0
			cursor pointer
			margin-top 10px
			padding 5px 10px
			position relative
			z-index 1
			
			ul
				.listaselect
					background none repeat scroll 0 0 #fff
					border 1px solid #dedede
					display none
					left -1px
					margin-left 0
					margin-top 49px
					padding-left 0
					position absolute
					text-indent 150px
					top 0
					width 100%

					li
						border-bottom 1px solid #efefef
						cursor pointer
						display block
						line-height 150px
						list-style outside none none
						margin 0
						padding 1.1em 0.3em

						a:hover
							color #999797
							text-decoration none
							
