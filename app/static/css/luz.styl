		article
			position absolute
			left 20%
			top 7em
			width 35%

			.controles
				margin-left 40%
				width 100%

				.onOff
					margin-left 9%
			
			.infoLuz
				margin-left 30%

		article.tablaLuz
			width 60%

@media only screen and (min-device-width: 980px)
	section
		article
			left 15%
			width 78%

			.controles
				display block
				float right
				width 35%
			
			.infoLuz
				display block
				margin 9.5em 0 0 70%
				
		article.tablaLuz
			width 40%
			z-index 1
