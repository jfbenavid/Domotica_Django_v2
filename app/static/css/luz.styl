color_fondo = #444
color_letras = rgba(white, 0.5)
color_tabla_luz = rgba(black,0.1)

section
	article
		width 100%

		.controles
			display none
			margin-top 10px
			top 10px

			.onOff
				margin-left 7.5%
				width 85%
				
				figure
					img
						margin-left 5%
						width 90%

			.divDimmer
				margin-left 10%
				text-align center
				width 80%

		.infoLuz
			display none
			margin-left 20%
			margin-top 20px
			width 80%

			span
				display block
				
	article.tablaLuz
		background color_tabla_luz
		margin-top 1px
		text-align center
		width 100%
		
		.cabecera
			background rgba(black, 0.2)
			margin-bottom 1px

		.tabla
			display inline-block
			height 40px
			line-height 40px
			overflow-x auto
			white-space nowrap
			width 24%

			&:hover
				cursor pointer

			&[name = nombre]
				width 48%

		.luzOver:hover
			background color_tabla_luz

