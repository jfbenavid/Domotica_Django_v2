color_fondo = #444
color_letras = rgba(white,0.5)
color_nav = #22BCE0

alineacionEscritorio(anchoDiv, margenIzq){
	display block
	float left
	margin 30px 0 0 margenIzq
	width anchoDiv
}

body
	color color_fondo
	//display flex 	///para footer abajo
	//flex-direction column 	///para footer abajo
	font-family Arial, Helvetica, sans-serif
	font-size 16px
	height 100%
	//min-height 100vh 	///para footer abajo
	margin 0 0 5rem

footer
	background color_fondo
	bottom 0
	color color_letras
	left 0
	margin-top 1em
	min-height 5rem
	padding 1em 0
	position absolute
	text-align center
	width 100%
		
	h3
		font-size 14px
		font-weight normal
		
		strong
			display block
	
		.design 
		.electronica
			display block

			&:before
			&:after
				content " - "

html
	position relative
	min-height 100%

header
	background color_fondo
	color color_letras
	padding 0.5em
	position relative
	
	.logo
		border-right 1px solid white
		bottom 5px
		float left
		position absolute
		top 5px
		width 60px

		img
			width 52px
			
	.logoU
		border-left 1px solid white
		bottom 5px
		display inline-block
		float right
		position absolute
		right 5px
		top 5px
		width 70px

		img
			margin-left 10px
			width 52px
			
	.titulo
		margin 0 80px 0 70px

		.title
			font-size 18px
			font-weight normal
			height 3.5em
			margin 0
			text-align center
			line-height 60px

nav
	background color_nav
	border-left 10px solid white
	position relative
	
	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		left 0px
		position absolute
		top 0
	
	.menu
		height 40px
		line-height 40px
		margin 0
		padding-left: 10px;
		overflow-x auto
		white-space nowrap
		
		li
			display inline-block
			
			a
				text-decoration none

				span
					color white
					display block
					margin 0 0.5em
					padding 0 0.2em

			&:hover
				background rgba(black,0.1)
				cursor pointer
				
				span
					color color_letras

section
	//flex 1 	///para footer abajo
	
	article
		.controles
			display none
			margin-top 10px
			top 10px

			.onOff
				margin-left 7.5%
				width 85%
				
				figure
					img
						margin-left 5%
						width 90%

			.divDimmer
				margin-left 10%
				text-align center
				width 80%

		.infoLuz
			display none
			margin-left 20%
			margin-top 20px
			width 80%

			span
				display block

		.termometro
			display none

			.temperatura
				text-align center
				
				span
					display block
			// .temperatura
			// 	height 90
			// 	margin-left 25px
			// 	width 200px
				
			.controlTermometro
				width 100%

				span
				input
				img
					display block
					margin-left 9%
					margin-top 5px
					width 80%


	article.tablaLuz
		background rgba(black, 0.1)
		display none
		margin-top 1px
		text-align center
		width 100%
		
		.cabecera
			background rgba(black,0.2)
			margin-bottom 1px

		.tabla
			display inline-block
			height 40px
			line-height 40px
			width 24%
			
			&:hover
				cursor pointer

		.luzOver:hover
			background rgba(black,0.1)

	article.welcome
		margin-top 10px
		margin-left 10%

		img
			width 90%
			

@media screen and (min-width: 768px)
	nav
		display none

	section

		article
			.controles
				alineacionEscritorio(25%, 15%)

			.termometro
				display block
				float right
				margin 30px 6%
				width 40%
					
				.controlTermometro
					width 100%

					span
					input
					img
						display block
						margin-left 24%
						margin-top 5px
						width 50%

		article.tablaLuz
			alineacionEscritorio(40%, 60px)

		article.welcome
			display none

@media screen and (min-height: 600px)
	footer
		margin-bottom -6rem