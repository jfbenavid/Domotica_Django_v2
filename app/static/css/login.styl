color_fondo = #444
color_letras = rgba(white, 0.5)

section
	aside
		img
			display block
			margin auto
			padding-top 10px
			width 70%

	article
		width 100%

		.botonIngreso
			background color_fondo
			border-radius 8px
			float right
			margin-right 20px
			margin-top 20px
			width 90px

			input
				background transparent
				border none
				color color_letras
				font-weight bold
				height 35px
				text-align center
				width 100%

		.login
			color rgba(black, 0.7)//color_letras
			margin 0 auto
			width 90%
			//margin 10px 20px 10px 15px

			& > *
				display block

			label
				font-weight bold
				margin-top 10px

			input
				color rgba(black, 0.7)
				font-size 1.2em
				height 25px
				margin-top 3px
				width 98%

@media only screen and (min-device-width: 768px)
	section
		article
			display block
			float left
			margin 13% 0 0 15%
			width 20%

		aside
			display block
			float left
			margin 0 40px 0 5%
			width 40%

			img
				padding 25px 15px 0 10%
				width 100%